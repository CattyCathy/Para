<Window x:Class="Para.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Para.UI"
        xmlns:control="clr-namespace:Para.UI.Control"
        xmlns:text="clr-namespace:Para.UI.Text"
        xmlns:container ="clr-namespace:Para.UI.Container"
        xmlns:local="clr-namespace:Para"
        mc:Ignorable="d"
        Title="ParaUI" Height="450" Width="800">
    <Grid Background="Black">

        <container:ScrollView x:Name="scrollContainer">
            <StackPanel Background="Gray" HorizontalAlignment="Stretch">
                <TextBox Margin="0 200 0 0" FontSize="50" Background="Transparent" BorderThickness="0" Foreground="White" HorizontalAlignment="Center">
                    ParaUI
                </TextBox>
                <control:TextBox Height="30" Width="600" Background="Gray"/>
            </StackPanel>
        </container:ScrollView>
        <control:ScrollBar Height="80" Width="5"/>
    </Grid>
</Window>
