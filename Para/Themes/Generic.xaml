<ResourceDictionary
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:Para"
       xmlns:ui="clr-namespace:Para.UI"
       xmlns:control="clr-namespace:Para.UI.Control"
       xmlns:text="clr-namespace:Para.UI.Text">

    <Style TargetType="{x:Type control:Caret}">
       <Setter Property="Width" Value="4"/>
       <Setter Property="Height" Value="16"/>
       <Setter Property="Background" Value="White"/>
       <Setter Property="Template">
           <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:Caret}">
                   <Border Background="{TemplateBinding Background}"
                           Width="{TemplateBinding Width}"
                           Height="{TemplateBinding Height}"
                           CornerRadius="2">
                   </Border>
               </ControlTemplate>
           </Setter.Value>
       </Setter>
   </Style>

    <Style TargetType="{x:Type control:TextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:TextBox}">
                    <Grid>
                        <Canvas x:Name="PART_AnimationLayer" IsHitTestVisible="False" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel x:Name="PART_CharPanel" Orientation="Horizontal" Background="{TemplateBinding Background}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
